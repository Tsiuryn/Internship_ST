<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:orientation="vertical"
    tools:context=".hw_08.task_1.CounterActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1">
        <Button
            android:id="@+id/hw8BtnPlus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/plus_1"/>
        <TextView
            android:id="@+id/hw8TvActivity"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="35dp"
            android:gravity="center"
            android:layout_gravity="bottom"/>
    </LinearLayout>

    <fragment
        android:id="@+id/counterContainer"
        android:name="alex.ts.app.hw_08.task_1.MyCounterFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent" />
</LinearLayout>
