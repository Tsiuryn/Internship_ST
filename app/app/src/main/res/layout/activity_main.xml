<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/mainHW1"
                android:layout_width="@dimen/width_btn"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_Top"
                android:text="@string/homework_01" />

            <Button
                android:id="@+id/mainHW2"
                android:layout_width="@dimen/width_btn"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_Top"
                android:text="@string/homework_02" />

            <Button
                android:id="@+id/mainHW3"
                android:layout_width="@dimen/width_btn"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_Top"
                android:text="@string/homework_03" />

            <Button
                android:id="@+id/mainHW4"
                android:layout_width="@dimen/width_btn"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_Top"
                android:text="@string/homework_04" />

            <Button
                android:id="@+id/mainHW5"
                android:layout_width="@dimen/width_btn"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_Top"
                android:text="@string/homework_05" />

            <Button
                android:id="@+id/mainHW6"
                android:layout_width="@dimen/width_btn"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_Top"
                android:text="@string/homework_06" />

            <Button
                android:id="@+id/mainHW7"
                android:layout_width="@dimen/width_btn"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_Top"
                android:text="@string/homework_07" />

            <Button
                android:id="@+id/mainHW8"
                android:layout_width="@dimen/width_btn"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_Top"
                android:text="@string/homework_08" />

            <Button
                android:id="@+id/mainHW9"
                android:layout_width="@dimen/width_btn"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_Top"
                android:text="@string/homework_09" />

            <Button
                android:id="@+id/mainHW10"
                android:layout_width="@dimen/width_btn"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_Top"
                android:text="@string/homework_10" />

            <Button
                android:id="@+id/mainHW11"
                android:layout_width="@dimen/width_btn"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_Top"
                android:text="@string/homework_11" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>